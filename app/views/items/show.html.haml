= render "layouts/header"

%body
  %nav.breadCrumbs
    %ul
      %li
        = link_to "FURIMA" 
      %li
        %i.fa.fa-angle-right
      %li
        = link_to "ベビー・キッズ"
      %li
        %i.fa.fa-angle-right
      %li
        = link_to "ベビー服(男女兼用)  ~95cm"
      %li
        %i.fa.fa-angle-right
      %li
        = link_to "アウター"
      %li
        %i.fa.fa-angle-right
      %li
        = @item.name
  .main
    .showMain
      .contentLeftqq
      .contentRight
        .topContent
          .itemBox
            = @item.name

            .itemBox__body
              = image_tag @item.photos[0].variant(auto_orient: true), class: 'itemBox__body__show__img'
            .itemBox__price
              %span
                = ("#{@item.price} 円")
              .itemBox__price-detail
                %span
                  (税込)
            .itemDetail 
            .table
              %table
                %tbody
                  %tr
                    %th 出品者
                    %td
                      = @item.saler.nickname
                  %tr
                    %th カテゴリー
                    %td
                      = @parent
                      %br/
                      = @child if @child.present?
                      %br/
                      = @grand_child if @grand_child.present?
                  -# %tr    一旦コメントアウトしてます。
                  -#   %th ブランド
                  -#   %td
                  -# %tr
                  -#   %th 商品のサイズ
                  -#   %td
                  %tr
                    %th 商品の状態
                    %td= @item.status
                  %tr
                    %th 配送料の負担
                    %td= @item.shipping_charges
                  %tr
                    %th 発送元の地域
                    %td
                      = @item.shipping_area
                  %tr
                    %th 発送日の目安
                    %td= @item.days_to_ship

            .optionalArea
              %ul.optional
                %li.optionalBtn
                  %i.fa.fa-flag
                    = link_to "不適切な商品の通報"
          .commentBox
            %ul.commentContents
            %form#new_comment.new_comment{"accept-charset": "UTF-8", action: "#", method: "post"}
              %input{name: "utf8", type: "hidden", value: "✓"}/
              %input{name: "authenticity_token", type: "hidden", value: "1Bczt4lOo7JAdERX2XtCK8vhfifm8Ctxvh39Whs+Okki9MrIKVRqTBeFPZKZJYApdVTQaD4+C7APAiU25/MzZA=="}/
              %br/
              -if user_signed_in? && current_user.id == @item.saler_id 
               
                .relatedItems
                  = link_to "編集"
                  = link_to "削除", @item, method: :delete, data: { confirm: "商品名「#{@item.name}」を削除します。よろしいですか？"}
              -else 
                %button.commentBtn{name: "button", type: "submit"}
                  %i.fa.fa-comment
                    = link_to "購入確認画面へ進む", item_purchase_index_path(@item)
   
= render "layouts/footer"
